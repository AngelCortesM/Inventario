@{
    ViewBag.Title = "Acerca de este Proyecto";
    var modules = new[]
    {
        new { Title = "Gestión de Clientes", Description = "Módulo para administrar clientes, sus datos y contactos.", Icon = "bi-person-circle", Image = "https://via.placeholder.com/500x300?text=Clientes" },
        new { Title = "Gestión de Proveedores", Description = "Módulo para gestionar proveedores y sus productos.", Icon = "bi-briefcase-fill", Image = "https://via.placeholder.com/500x300?text=Proveedores" },
        new { Title = "Gestión de Inventario", Description = "Módulo para controlar el inventario de productos y su disponibilidad.", Icon = "bi-box-fill", Image = "https://via.placeholder.com/500x300?text=Inventario" }
    };
}

<main aria-labelledby="title">
    <div class="container mt-5">
        <h2 id="title" class="text-center mb-4">@ViewBag.Title</h2>
       
        <p class="text-center mb-5">Descubre más sobre los módulos principales de nuestro sistema de gestión, cada uno diseñado para facilitar tareas específicas y mejorar la eficiencia.</p>

        <div class="row">
            @foreach (var module in modules)
            {
                <div class="col-md-4 mb-4">
                    <div class="card border-light shadow-lg h-100">
                        <img src="@module.Image" class="card-img-top" alt="@module.Title">
                        <div class="card-body text-center">
                            <i class="bi @module.Icon display-4 text-primary mb-3"></i>
                            <h5 class="card-title">@module.Title</h5>
                            <p class="card-text">@module.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>



<!-- Estilos CSS personalizados -->
<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        height: 200px;
        object-fit: cover;
    }

    .card-body i {
        font-size: 3rem;
        color: lightcoral;
    }

    .card-title {
        font-weight: 600;
    }

    .card-text {
        color: lightcoral;
    }

    .container p {
        font-size: 1.1rem;
    }
</style>
